<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RxMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/light_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>

        <item name="textAppearanceHeadline2">@style/TextAppearance.QCM.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.QCM.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.QCM.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.QCM.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.QCM.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.QCM.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.QCM.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.QCM.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.QCM.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.QCM.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.QCM.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.QCM.Overline</item>

        <item name="background_card_color">@color/color_card_background_light</item>
        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>
        <item name="emphasisStrokeColorAlpha">0.12</item>

    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.RxMovies.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/dark_grey</item>
        <item name="postSplashScreenTheme">@style/Theme.RxMovies</item>
    </style>

</resources>